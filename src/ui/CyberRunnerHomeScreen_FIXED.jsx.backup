import React, { useRef, Suspense, useEffect, useState } from 'react';
import { Canvas, useFrame } from '@react-three/fiber';
import { Environment, ContactShadows, Float } from '@react-three/drei';
import { Play, ShoppingCart, User, Settings, Sparkles, Trophy, LayoutGrid, Users } from 'lucide-react';
import { CHARACTERS } from '../utils/constants';
import { GLBCharacterPreview } from '../game/models/GLBCharacterPreview';

// ============================================
// CYBER RUNNER HOME SCREEN - ULTRA POLISHED v2.0
// ‚úÖ Fixed: Character now plays idle animation (no more T-pose)
// ‚úÖ Fixed: Aesthetic button colors with modern gradients
// ‚úÖ Fixed: Perfect button responsiveness on all devices
// ============================================

export default function CyberRunnerHomeScreen({
  onStart, onOpenSettings, onOpenShop, onOpenCharacters,
  onOpenEngagement, onOpenAuth, onOpenAccountProfile, onOpenCharacterPreview, 
  currentUser, bestScore = 0, totalCoins = 0, totalGems = 0, selectedCharacter = 'default'
}) {
  const characterName = CHARACTERS[selectedCharacter]?.name || 'Cyber Runner';
  const characterColor = CHARACTERS[selectedCharacter]?.color || '#5b8fc7';
  const [pulse, setPulse] = useState(false);
  const [isMobile, setIsMobile] = useState(window.innerWidth < 768);

  useEffect(() => {
    const timer = setInterval(() => setPulse(p => !p), 2000);
    return () => clearInterval(timer);
  }, []);

  useEffect(() => {
    const handleResize = () => setIsMobile(window.innerWidth < 768);
    window.addEventListener('resize', handleResize);
    return () => window.removeEventListener('resize', handleResize);
  }, []);

  // üé® Modern gradient button style with better colors
  const btnStyle = (variant = 'default') => {
    const variants = {
      primary: {
        background: `linear-gradient(135deg, 
          ${characterColor}E6 0%, 
          ${characterColor}CC 50%, 
          #7c3aed 100%)`,
        border: `3px solid ${characterColor}`,
        boxShadow: `0 8px 32px ${characterColor}60, 0 0 0 1px rgba(255,255,255,0.1) inset`,
        color: '#fff',
      },
      secondary: {
        background: 'linear-gradient(135deg, rgba(99, 102, 241, 0.25) 0%, rgba(139, 92, 246, 0.25) 100%)',
        border: '2px solid rgba(139, 92, 246, 0.4)',
        boxShadow: '0 4px 20px rgba(139, 92, 246, 0.3), 0 0 0 1px rgba(255,255,255,0.05) inset',
        color: '#e0e7ff',
      },
      gold: {
        background: 'linear-gradient(135deg, rgba(251, 191, 36, 0.3) 0%, rgba(245, 158, 11, 0.3) 100%)',
        border: '3px solid rgba(251, 191, 36, 0.8)',
        boxShadow: '0 8px 32px rgba(251, 191, 36, 0.4), 0 0 0 1px rgba(255,255,255,0.1) inset',
        color: '#fef3c7',
      },
      glass: {
        background: 'rgba(30, 27, 75, 0.5)',
        border: '2px solid rgba(255, 255, 255, 0.15)',
        boxShadow: '0 4px 24px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(255,255,255,0.05) inset',
        color: '#fff',
      }
    };

    const style = variants[variant] || variants.secondary;

    return {
      display: 'flex',
      alignItems: 'center',
      justifyContent: 'center',
      ...style,
      borderRadius: '16px',
      cursor: 'pointer',
      backdropFilter: 'blur(16px) saturate(180%)',
      transition: 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)',
      fontFamily: "'Orbitron', sans-serif",
      textTransform: 'uppercase',
      fontWeight: '700',
      position: 'relative',
      overflow: 'hidden',
      minHeight: '52px',
      touchAction: 'manipulation',
      WebkitTapHighlightColor: 'transparent',
      userSelect: 'none',
      // Ensure proper touch targets (minimum 48x48px)
      minWidth: '48px',
    };
  };

  // üéØ Enhanced interaction handlers
  const handleButtonInteraction = (e, isEnter) => {
    if (isEnter) {
      e.currentTarget.style.transform = 'scale(1.05) translateY(-2px)';
      e.currentTarget.style.filter = 'brightness(1.15)';
    } else {
      e.currentTarget.style.transform = 'scale(1)';
      e.currentTarget.style.filter = 'brightness(1)';
    }
  };

  return (
    <div style={{ 
      width: '100vw', 
      height: '100vh', 
      position: 'relative', 
      background: 'radial-gradient(circle at 50% 40%, #581c87 0%, #1e1b4b 60%, #020617 100%)', 
      overflow: 'hidden', 
      color: 'white', 
      fontFamily: "'Inter', sans-serif" 
    }}>
      
      {/* üéÆ 3D CHARACTER PREVIEW - FIXED IDLE ANIMATION */}
      <div style={{ position: 'absolute', inset: 0, zIndex: 0, pointerEvents: 'none' }}>
        <Canvas 
          shadows 
          dpr={[1, 2]} 
          camera={{ position: [0, 0.8, 4.5], fov: 45 }}
          gl={{ 
            antialias: true, 
            alpha: true,
            powerPreference: 'high-performance'
          }}
        >
          <ambientLight intensity={0.6} />
          <directionalLight position={[5, 8, 10]} intensity={1.5} color="#ffffff" castShadow />
          <pointLight position={[-5, 2, 5]} intensity={1.2} color={characterColor} />
          <pointLight position={[5, 2, 5]} intensity={1.0} color="#9b7fc7" />
          <spotLight position={[0, 5, 0]} intensity={1} angle={0.6} penumbra={1} color="#ffffff" />
          <Environment preset="city" />
          
          <Suspense fallback={null}>
            <GLBCharacterPreview 
              characterId={selectedCharacter}
              rotating={false}  // Disable rotation for idle
              floatEnabled={true}  // Keep subtle floating
              scale={isMobile ? 0.45 : 0.6}
              showPlatform={true}
              platformColor={characterColor}
            />
          </Suspense>
          
          <fog attach="fog" args={['#020617', 6, 15]} />
        </Canvas>
      </div>

      {/* üì± UI OVERLAY - FIXED SAFE AREAS */}
      <div style={{ 
        position: 'absolute', 
        inset: 0, 
        zIndex: 10, 
        display: 'flex', 
        flexDirection: 'column', 
        padding: `max(env(safe-area-inset-top, 20px), 20px) max(env(safe-area-inset-right, 16px), 16px) max(env(safe-area-inset-bottom, 20px), 20px) max(env(safe-area-inset-left, 16px), 16px)`,
        justifyContent: 'space-between', 
        pointerEvents: 'none',
        gap: '16px'
      }}>
        
        {/* üéØ HEADER */}
        <div style={{ 
          display: 'flex', 
          justifyContent: 'space-between', 
          alignItems: 'flex-start', 
          pointerEvents: 'auto', 
          zIndex: 20,
          gap: '12px',
          flexWrap: 'wrap'
        }}>
          <button 
            onClick={() => window.location.reload()} 
            style={{ 
              ...btnStyle('glass'),
              padding: '12px',
              borderRadius: '14px',
            }}
            onMouseEnter={(e) => handleButtonInteraction(e, true)}
            onMouseLeave={(e) => handleButtonInteraction(e, false)}
            onTouchStart={(e) => handleButtonInteraction(e, true)}
            onTouchEnd={(e) => handleButtonInteraction(e, false)}
          >
            <LayoutGrid size={22} color="#fff" />
          </button>
          
          <div style={{ 
            display: 'flex', 
            gap: '10px', 
            background: 'rgba(0,0,0,0.75)', 
            borderRadius: '30px', 
            padding: '12px 20px', 
            border: `2px solid ${characterColor}60`, 
            boxShadow: `0 4px 24px ${characterColor}40, 0 0 0 1px rgba(255,255,255,0.05) inset`,
            backdropFilter: 'blur(12px)'
          }}>
            <span style={{ 
              color: '#fbbf24', 
              fontWeight: 'bold', 
              fontSize: 'clamp(14px, 3vw, 16px)',
              display: 'flex',
              alignItems: 'center',
              gap: '6px'
            }}>
              ü™ô {totalCoins.toLocaleString()}
            </span>
            <span style={{ 
              color: '#c084fc', 
              fontWeight: 'bold', 
              fontSize: 'clamp(14px, 3vw, 16px)',
              display: 'flex',
              alignItems: 'center',
              gap: '6px'
            }}>
              üíé {totalGems}
            </span>
          </div>
          
          <div style={{ display: 'flex', gap: '10px', flexWrap: 'nowrap' }}>
            <button 
              onClick={onOpenSettings} 
              style={{ 
                ...btnStyle('glass'),
                padding: '12px',
                borderRadius: '14px',
              }}
              onMouseEnter={(e) => handleButtonInteraction(e, true)}
              onMouseLeave={(e) => handleButtonInteraction(e, false)}
              onTouchStart={(e) => handleButtonInteraction(e, true)}
              onTouchEnd={(e) => handleButtonInteraction(e, false)}
            >
              <Settings size={22} color="white"/>
            </button>
            {currentUser && !currentUser.isAnonymous ? (
              <button 
                onClick={onOpenAccountProfile} 
                style={{ 
                  ...btnStyle('primary'),
                  padding: '12px',
                  borderRadius: '14px',
                }}
                onMouseEnter={(e) => handleButtonInteraction(e, true)}
                onMouseLeave={(e) => handleButtonInteraction(e, false)}
                onTouchStart={(e) => handleButtonInteraction(e, true)}
                onTouchEnd={(e) => handleButtonInteraction(e, false)}
              >
                <User size={22} color="white"/>
              </button>
            ) : (
              <button 
                onClick={onOpenAuth} 
                style={{ 
                  ...btnStyle('glass'),
                  padding: '12px',
                  borderRadius: '14px',
                }}
                onMouseEnter={(e) => handleButtonInteraction(e, true)}
                onMouseLeave={(e) => handleButtonInteraction(e, false)}
                onTouchStart={(e) => handleButtonInteraction(e, true)}
                onTouchEnd={(e) => handleButtonInteraction(e, false)}
              >
                <User size={22} color="white"/>
              </button>
            )}
          </div>
        </div>

        {/* üèÜ CENTER - TITLE & BEST SCORE */}
        <div style={{ 
          textAlign: 'center', 
          pointerEvents: 'none',
          flex: 1,
          display: 'flex',
          flexDirection: 'column',
          justifyContent: 'center',
          gap: '16px'
        }}>
          <h1 style={{ 
            fontFamily: "'Orbitron', sans-serif", 
            fontSize: 'clamp(36px, 10vw, 56px)', 
            fontWeight: '900', 
            background: `linear-gradient(180deg, #fff 0%, ${characterColor} 100%)`, 
            WebkitBackgroundClip: 'text', 
            WebkitTextFillColor: 'transparent', 
            filter: `drop-shadow(0 4px 24px ${characterColor}80)`,
            lineHeight: 1.1,
            margin: 0,
            letterSpacing: '0.05em',
            textShadow: 'none'
          }}>
            CYBER RUNNER
          </h1>
          
          <div style={{ 
            display: 'inline-flex', 
            alignItems: 'center', 
            gap: '12px', 
            background: 'rgba(0,0,0,0.75)', 
            borderRadius: '30px', 
            padding: '14px 28px', 
            margin: '0 auto',
            border: `2px solid ${characterColor}60`,
            boxShadow: `0 4px 24px ${characterColor}50, 0 0 0 1px rgba(255,255,255,0.05) inset`,
            backdropFilter: 'blur(12px)'
          }}>
            <Trophy size={26} color={characterColor} style={{ filter: 'drop-shadow(0 0 8px currentColor)' }} />
            <span style={{ 
              fontSize: 'clamp(20px, 4vw, 28px)', 
              fontWeight: 'bold', 
              color: '#fff',
              fontFamily: "'Orbitron', sans-serif"
            }}>
              {bestScore.toLocaleString()}
            </span>
          </div>
        </div>

        {/* üéÆ BOTTOM - ACTION BUTTONS (FIXED RESPONSIVENESS) */}
        <div style={{ 
          display: 'flex', 
          flexDirection: 'column', 
          gap: '14px', 
          pointerEvents: 'auto', 
          maxWidth: '420px', 
          margin: '0 auto', 
          width: '100%'
        }}>
          {/* üöÄ MAIN PLAY BUTTON */}
          <button
            onClick={onStart}
            style={{
              ...btnStyle('primary'),
              padding: '20px 28px',
              fontSize: 'clamp(18px, 4vw, 24px)',
              fontWeight: '900',
              gap: '14px',
              minHeight: '68px',
              transform: pulse ? 'scale(1.02)' : 'scale(1)',
              animation: pulse ? 'pulse 2s infinite' : 'none',
            }}
            onMouseEnter={(e) => {
              e.currentTarget.style.transform = 'scale(1.05) translateY(-3px)';
              e.currentTarget.style.boxShadow = `0 12px 40px ${characterColor}80, 0 0 0 1px rgba(255,255,255,0.1) inset`;
            }}
            onMouseLeave={(e) => {
              e.currentTarget.style.transform = pulse ? 'scale(1.02)' : 'scale(1)';
              e.currentTarget.style.boxShadow = `0 8px 32px ${characterColor}60, 0 0 0 1px rgba(255,255,255,0.1) inset`;
            }}
            onMouseDown={(e) => e.currentTarget.style.transform = 'scale(0.98)'}
            onMouseUp={(e) => e.currentTarget.style.transform = 'scale(1.05) translateY(-3px)'}
            onTouchStart={(e) => e.currentTarget.style.transform = 'scale(0.98)'}
            onTouchEnd={(e) => e.currentTarget.style.transform = pulse ? 'scale(1.02)' : 'scale(1)'}
          >
            <Play size={28} fill="white" strokeWidth={0} /> START RUNNING
          </button>

          {/* üéØ SECONDARY BUTTONS GRID */}
          <div style={{ 
            display: 'grid', 
            gridTemplateColumns: 'repeat(2, 1fr)', 
            gap: '12px' 
          }}>
            <button 
              onClick={() => onOpenCharacters?.()} 
              style={{ 
                ...btnStyle('secondary'), 
                padding: '16px 12px', 
                fontSize: 'clamp(13px, 3vw, 15px)', 
                gap: '8px',
                minHeight: '58px'
              }}
              onMouseEnter={(e) => handleButtonInteraction(e, true)}
              onMouseLeave={(e) => handleButtonInteraction(e, false)}
              onTouchStart={(e) => handleButtonInteraction(e, true)}
              onTouchEnd={(e) => handleButtonInteraction(e, false)}
            >
              <Users size={20} /> RUNNERS
            </button>
            
            <button 
              onClick={onOpenShop} 
              style={{ 
                ...btnStyle('secondary'), 
                padding: '16px 12px', 
                fontSize: 'clamp(13px, 3vw, 15px)', 
                gap: '8px',
                minHeight: '58px'
              }}
              onMouseEnter={(e) => handleButtonInteraction(e, true)}
              onMouseLeave={(e) => handleButtonInteraction(e, false)}
              onTouchStart={(e) => handleButtonInteraction(e, true)}
              onTouchEnd={(e) => handleButtonInteraction(e, false)}
            >
              <ShoppingCart size={20} /> SHOP
            </button>
          </div>

          {/* ‚ú® DAILY REWARDS BUTTON */}
          <button
            onClick={onOpenEngagement}
            style={{
              ...btnStyle('gold'),
              padding: '18px 24px',
              fontSize: 'clamp(15px, 3.5vw, 18px)',
              fontWeight: 'bold',
              gap: '12px',
              minHeight: '60px'
            }}
            onMouseEnter={(e) => {
              e.currentTarget.style.transform = 'scale(1.03) translateY(-2px)';
              e.currentTarget.style.boxShadow = '0 12px 40px rgba(251, 191, 36, 0.6), 0 0 0 1px rgba(255,255,255,0.1) inset';
              e.currentTarget.style.filter = 'brightness(1.15)';
            }}
            onMouseLeave={(e) => {
              e.currentTarget.style.transform = 'scale(1)';
              e.currentTarget.style.boxShadow = '0 8px 32px rgba(251, 191, 36, 0.4), 0 0 0 1px rgba(255,255,255,0.1) inset';
              e.currentTarget.style.filter = 'brightness(1)';
            }}
            onTouchStart={(e) => e.currentTarget.style.transform = 'scale(0.98)'}
            onTouchEnd={(e) => e.currentTarget.style.transform = 'scale(1)'}
          >
            <Sparkles size={22} style={{ filter: 'drop-shadow(0 0 4px currentColor)' }} /> DAILY REWARDS
          </button>
        </div>
      </div>

      {/* üé® CSS ANIMATIONS */}
      <style>{`
        @keyframes pulse {
          0%, 100% { transform: scale(1); }
          50% { transform: scale(1.02); }
        }
      `}</style>
    </div>
  );
}
